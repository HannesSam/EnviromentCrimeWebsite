@{
    Layout = "_PublicLayout";
}
@model LoginModel


<section id="mainColumn">
    <h2>Inloggning för Småstads personal</h2>
    <p class="info">En säker tjänst från Småstads IT-avdelning</p>

    <form asp-controller="Public" asp-action="Login" method="post">
        <p>
            <input type="hidden" name="isSubmitted" value="true" />
        </p>
        <p>
            <label class="label" asp-for="UserName"></label><br />
            <input asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </p>
        <p>
            <span class="label">Lösenord:</span><br />
            <input type="password" name="password" />
        </p>
        <p>
            <input type="hidden"asp-for="ReturnUrl" />
        </p>
        <p>
            <input class="button" type="submit" value="Logga in" />
        </p>
        <div asp-validation-summary="All"></div>
    </form>
</section><!-- End Left -->